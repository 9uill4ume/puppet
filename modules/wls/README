# weblogic puppet module 
# installs weblogic on linux and window based systems with 64 or 32 bits JDK
# just add the weblogic generic jar to the files folder of the wls module
#  
# install weblogic
# creates, configures and run nodemanager
# create a new weblogic domain

# use it like this in site.pp

include wls

  wls::installwls{'wls1211':
    version    => '1211',
    versionJdk => '7u7',
  }

  wls::installwls{'11gPS5':
    version    => '1036',
    versionJdk => '6u35',
  }

  wls::wlsdomain{'testDomain':
      wlHome          => '/opt/oracle/wls/wls12c/wlserver_12.1',
      fullJDKName     => 'jdk1.7.0_07',
  #   template        => '/common/templates/domains/wls.jar'
      domain          => 'myTestDomain',
      domainPath      => "/opt/oracle/wls/wls12c/admin",
  #   AdminServerName => "AdminServer",
  #   AdminListenAdr  => "localhost",
  #   AdminListenPort => 7001,
  #   wlsUser         => "weblogic",
  #   password        => "weblogic1",
  #   user            => "oracle",
  #   group           => "dba",    
  }

  wls::nodemanager{'nodemanager':
    wlHome          => '/opt/oracle/wls/wls12c/wlserver_12.1',
    fullJDKName     => 'jdk1.7.0_07',
  # listenPort      => 5556,
  # user            => 'oracle',
  # group           => 'dba',
    require         => Wls::Installwls['wls12c'],
  }
    